{
  "name": "hexbloop-electron",
  "productName": "Hexbloop",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "build": "electron-builder",
    "test": "node test/basic.test.js",
    "dist": "electron-builder --mac",
    "dist:all": "electron-builder --mac --win --linux"
  },
  "keywords": [
    "audio",
    "music",
    "processing",
    "hexagon",
    "mystical",
    "chaos",
    "magic"
  ],
  "author": "Hexbloop Audio Labs",
  "license": "ISC",
  "description": "ðŸ”® Hexbloop - Chaos Magic Audio Engine. Transform your audio with mystical digital processing influenced by natural forces.",
  "build": {
    "appId": "com.hexbloop.audio",
    "productName": "Hexbloop",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!swift/**",
      "!dist/**",
      "!*.log",
      "!.git/**"
    ],
    "mac": {
      "category": "public.app-category.music",
      "icon": "assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets"
    }
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-id3": "^0.2.9",
    "p5": "^2.0.4"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12"
  }
}
